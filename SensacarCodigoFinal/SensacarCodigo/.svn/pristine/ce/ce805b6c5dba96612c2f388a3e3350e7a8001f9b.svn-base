	@Override
	public void actualizar(Contexto contexto) {

		switch (contexto.getEvento()) {
		case AñadirClienteCommand:
			JOptionPane.showMessageDialog(null, "Se ha creado el cliente nuevo con id " + contexto.getDato());
			break;
		case AñadirClienteCommandError:
			if ((int) contexto.getDato() == -2)
				JOptionPane.showMessageDialog(null, "El DNI introducido ya existe");
			else if ((int) contexto.getDato() == -3)
				JOptionPane.showMessageDialog(null, "El DNI introducido no es valido");
			else if ((int) contexto.getDato() == -4)
				JOptionPane.showMessageDialog(null, "El telefono introducido no es valido");
			else
				JOptionPane.showMessageDialog(null, "No se ha podido añadir el cliente");
			break;
		case EliminarClienteCommand:
			JOptionPane.showMessageDialog(null,
					"Se ha eliminado el cliente con id" + contexto.getDato() + "\n existosamente");
			break;
		case EliminarClienteCommandError:
			if ((int) contexto.getDato() == -2)
				JOptionPane.showMessageDialog(null, "El cliente no existe");
			else if ((int) contexto.getDato() == -1)
				JOptionPane.showMessageDialog(null, "El cliente ya esta inactivo");
		case ActualizarClienteCommand:
			actualizar.actualizar(contexto);
			break;
		case ActualizarClienteCommand2Vueta:
			JOptionPane.showMessageDialog(null, "El cliente se actualizo correctamente");
			break;
		case ActualizarClienteCommandError:
			JOptionPane.showMessageDialog(null, "Error al actualizar");
			break;
		case MostrarClienteCommand:
			mID.actualizar(contexto);
			break;
		case MostrarClienteCommandError:
			JOptionPane.showMessageDialog(null, "No existe el cliente");
			break;
		case MostrarListaClienteCommand:
			mAll.actualizar(contexto);
			break;
		case MostrarListaClienteCommandError:
			JOptionPane.showMessageDialog(null, "No hay clientes registrados \n en la base de datos");
			break;
		case QueryClienteCommand:
			query.actualizar(contexto);
			break;
		case QueryClienteCommandError:
			JOptionPane.showMessageDialog(null, "No se han encontrado resultados para la query indicada");
			break;
		default:
			break;
		}
	}

